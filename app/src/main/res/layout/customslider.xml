<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <SeekBar
        android:id="@+id/customSliderSeekBar"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewHeader"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Header Text:"
        android:paddingTop="4dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewMinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/customSliderSeekBar"
        android:layout_below="@+id/customSliderSeekBar"
        android:paddingBottom="4dp"
        android:text="Min Text"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/textViewMidText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Mid Text"
        android:textSize="12sp"
        android:layout_below="@+id/customSliderSeekBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewMaxText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/customSliderSeekBar"
        android:layout_below="@+id/customSliderSeekBar"
        android:paddingBottom="4dp"
        android:text="Max Text"
        android:textSize="12sp" />

</RelativeLayout>